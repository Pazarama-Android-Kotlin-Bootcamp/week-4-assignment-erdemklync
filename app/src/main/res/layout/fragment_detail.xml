<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingVertical="48dp"
    android:paddingHorizontal="24dp"
    android:background="@color/blue"
    tools:context=".ui.detail.DetailFragment">

    <TextView
        android:id="@+id/city_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="İstanbul"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:fontFamily="@font/quicksand_bold"
        android:includeFontPadding="false"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="11.10.2021"
        android:textColor="@color/white"
        android:fontFamily="@font/quicksand_regular"
        android:includeFontPadding="false"

        app:layout_constraintTop_toBottomOf="@id/city_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:id="@+id/weather_image"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="-4dp"
        tools:src="@drawable/img_03d"
        android:contentDescription="TODO"

        app:layout_constraintTop_toBottomOf="@id/date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Space
        android:id="@+id/img_spacer"
        android:layout_width="match_parent"
        android:layout_height="32dp"

        app:layout_constraintTop_toBottomOf="@id/weather_image"
        />

    <TextView
        android:id="@+id/day_degree_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gündüz"
        android:textSize="12sp"
        android:textColor="@color/white"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/evening_degree_text"
        app:layout_constraintTop_toBottomOf="@id/img_spacer"
        />

    <TextView
        android:id="@+id/day_degree_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="23.0"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:includeFontPadding="false"

        app:layout_constraintStart_toStartOf="@id/day_degree_text"
        app:layout_constraintEnd_toEndOf="@id/day_degree_text"
        app:layout_constraintTop_toBottomOf="@id/day_degree_text"
        />

    <TextView
        android:id="@+id/evening_degree_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Akşam"
        android:textSize="12sp"
        android:textColor="@color/white"

        app:layout_constraintTop_toBottomOf="@id/img_spacer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/evening_degree_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="23.0"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:includeFontPadding="false"

        app:layout_constraintStart_toStartOf="@id/evening_degree_text"
        app:layout_constraintEnd_toEndOf="@id/evening_degree_text"
        app:layout_constraintTop_toBottomOf="@id/evening_degree_text"
        />

    <TextView
        android:id="@+id/night_degree_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gece"
        android:textSize="12sp"
        android:textColor="@color/white"

        app:layout_constraintTop_toBottomOf="@id/img_spacer"
        app:layout_constraintStart_toEndOf="@id/evening_degree_text"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/night_degree_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="23.0"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:includeFontPadding="false"

        app:layout_constraintStart_toStartOf="@id/night_degree_text"
        app:layout_constraintEnd_toEndOf="@id/night_degree_text"
        app:layout_constraintTop_toBottomOf="@id/night_degree_text"
        />


</androidx.constraintlayout.widget.ConstraintLayout>